<h2>Sign Up</h2>

<%= form_with model: @user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :balance  %>
  <%= f.number_field :balance %>

  <%= f.submit %> 
<% end %>
