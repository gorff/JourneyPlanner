<div class="row justify-content-md-center">
  <div class="col-md-8">

<h2> Trip History </h2>
<table class="table">
    <thead> 
        <tr>
            <th scope="col"> Trip ID </th>
            <th scope="col"> User </th>
            <th scope="col"> From </th>
            <th scope="col"> To </th>
            <th scope="col"> Date </th>
        </tr>
    </thead>
    <tbody>
    <% @trips.each do |trip| %>
        <% if trip.user_id == session[:user_id]  %>
            <tr>
                <th scope ="row"><%= trip.id %> </th>
                <td><%= trip.user.name %> </td>
                <td><%= @stops[trip.start_id-1].name %> </td>
                <td><%= @stops[trip.end_id-1].name %> </td>
                <td><%= trip.date %> </td>
            <tr>

        <% end %>
    <% end %>
    </tbody>
</table>
</div>
</div>